<h1>Update <%= "#{@item.name}" %></h1>

<%= form_with model: @merchant_item, local: true do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :local, "Description" %>
  <%= f.text_field :description %>

  <%= f.label :vendor_count, "Unit Price" %>
  <%= f.text_field :unit_price %>

  <%= f.submit 'Submit' %>
<% end %>
