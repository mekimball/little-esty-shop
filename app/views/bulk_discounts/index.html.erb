<h1>Discounts!</h1>

<% @discounts.each do |discount| %>
<div id="id-<%= discount.id %>">
  <p>Discount: <%= discount.discount * 100 %>%, Item Threshold: <%= discount.number_of_items_necessary %> <%= link_to 'Discount Details', merchant_bulk_discount_path(@merchant, discount) %></p>
  </div>
<% end %>


