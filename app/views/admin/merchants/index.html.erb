<h1>Admin Merchants</h1>

<%= link_to "New Merchant", new_admin_merchant_path %>
<br>

<u><h3>Enabled Merchants:</h3></u>
<% @merchants.enabled_merchants.each do |merchant| %>
  <section id="merchant-<%= merchant.id %>">
    <p><%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %>: <%= merchant.status.capitalize %>
    <%= button_to "Disable",  "/admin/merchants/#{merchant.id}", method: :patch, params: {merchant_id: merchant.id, disable: 1}%>

  </section>
<% end %>
<HR COLOR="black" SIZE="4">
<u><h3>Disabled Merchants:</h3></u>
<% @merchants.disabled_merchants.each do |merchant| %>
  <section id="merchant-<%= merchant.id %>">
    <p><%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %>: <%= merchant.status.capitalize %>
    <%= button_to "Enable",  "/admin/merchants/#{merchant.id}", method: :patch, params: {merchant_id: merchant.id, enable: 0}%>

  </section>
<% end %>